# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET		/bind		controllers.RegistryController.bind()
GET		/rebind		controllers.RegistryController.rebind()
GET		/unbind		controllers.RegistryController.unbind()
GET		/lookup		controllers.RegistryController.lookup()
GET		/list		controllers.RegistryController.list()	

# Home page
GET     /			controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
